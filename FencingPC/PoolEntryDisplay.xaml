<UserControl x:Class="FencingPC.PoolEntryDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FencingPC"
             mc:Ignorable="d" 
             Margin="2" Height="48" Width="48" MouseDoubleClick="PoolEntryDisplay_MouseDoubleClick">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1.0" Name="bdrDisplay">
            <TextBlock Text="V5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center" Margin="0" Name="tbDisplay"/>

            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{DynamicResource str_Button_EditBattle}" Click="menuEditBattle_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </Grid>
</UserControl>
