<UserControl x:Class="FencingPC.PlusMinusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FencingPC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Style="{StaticResource StandardButtonStyle}" Grid.Row="0" Grid.Column="0" Content="-" Width="50" Name="btnMinus" Click="btnMinus_Click"/>
        <TextBlock Style="{StaticResource VersusTextBlockStyle}" Grid.Row="0" Grid.Column="1" Text="{Binding ScoreValue}" Background="Wheat"/>
        <Button Style="{StaticResource StandardButtonStyle}" Grid.Row="0" Grid.Column="2" Content="+" Width="50" Name="btnPlus" Click="btnPlus_Click"/>
    </Grid>
</UserControl>
